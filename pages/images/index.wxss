/* pages/images/index.wxss */
@import '../../static/wxss/iconfont.wxss';

page {
  padding: 20rpx;
  box-sizing: border-box;
}

.toUpFile {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.desc {
  margin-left: 20rpx;
}

.upLoad {
  width: 100rpx;
  height: 100rpx;
  font-size: 100rpx;
}

.main {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.image_view {
  width: 25%;
  height: 200rpx;
  margin: 20rpx;
  position: relative;
}

.del {
  position: absolute;
  right: 0;
  top: 0;
  animation: shake 1s infinite linear;
}

.image_view image {
  width: 100%;
  height: 100%;
}


@keyframes shake {

  0%,
  100% {
    transform: translateX(0);
  }

  10%,
  30%,
  50%,
  70%,
  90% {
    transform: translateX(-5rpx);
  }

  20%,
  40%,
  60%,
  80% {
    transform: translateX(5rpx);
  }
}
