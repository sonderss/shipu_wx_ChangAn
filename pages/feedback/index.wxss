page{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.title_view{
  width:100%;
  height: 100rpx;
  display: flex;
  justify-content:space-between;
  align-items: flex-end;
}
.submit{
  width: 100rpx;
  height: 70rpx;
  background: #1989fa;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  /* font-size: 16rpx; */
  margin-left: 20rpx;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.title_view input{
  width: 90%;
  height:80rpx;
  display: block;
  line-height: 80rpx;
  margin-left: 30rpx;
    border-bottom: 1rpx solid #ccc;
}
.ql-container{
  width: 95%;
  flex: 1;
  height: auto;
  margin-top: 20rpx;
  margin-left: 18rpx
}